<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="eventPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.progetto.client.gui.NewEventView">

    <stylesheets>
        <URL value="@style/style.css" />
    </stylesheets>

    <ScrollPane fx:id="eventScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
        <BorderPane fx:id="eventBorderPane" maxHeight="Infinity" maxWidth="Infinity">

            <left>
                <VBox alignment="CENTER" minWidth="345.0" spacing="15" BorderPane.alignment="CENTER">
                    <VBox fx:id="playerListViewContainer" alignment="TOP_CENTER" spacing="20" VBox.vgrow="ALWAYS">
                        <Label fx:id="activePlayersLabel" text="Players" />
                        <ListView fx:id="playerListView" maxHeight="Infinity" VBox.vgrow="ALWAYS" />
                    </VBox>
                </VBox>
            </left>

            <right>
                <VBox alignment="CENTER" minWidth="345.0" spacing="30" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                    <StackPane alignment="CENTER">
                        <ImageView fx:id="boardImage" fitHeight="209.0" fitWidth="345.0" preserveRatio="true" style="-fx-border-radius: 8; -fx-background-radius: 8" />
                        <Pane fx:id="cellsPane" maxHeight="209.0" maxWidth="345.0" minHeight="209.0" minWidth="345.0">
                            <Group fx:id="cellsGroup" />
                        </Pane>
                    </StackPane>

                    <VBox fx:id="eventSidebarWrapper" alignment="TOP_CENTER" maxWidth="345.0" spacing="20">
                        <Label fx:id="eventSectionTitle" text="Current event" wrapText="true" />
                        <ImageView fx:id="eventCard" fitHeight="292.0" fitWidth="190.0" preserveRatio="true" style="-fx-border-radius: 8; -fx-background-radius: 8" />

                        <VBox.margin>
                            <Insets bottom="10" left="0" right="0" top="0" />
                        </VBox.margin>
                    </VBox>

                    <VBox fx:id="activityChatContainer" alignment="TOP_CENTER" spacing="15" VBox.vgrow="ALWAYS">
                        <Label fx:id="activityChatLabel" text="Activity Log" />
                        <ScrollPane fx:id="chatScrollPane" fitToWidth="true" maxHeight="Infinity" style="-fx-background-color: transparent; -fx-background: transparent;">
                            <VBox fx:id="chatMessagesContainer" spacing="5" VBox.vgrow="ALWAYS" />
                        </ScrollPane>
                    </VBox>
                </VBox>
            </right>

            <center>
                <VBox alignment="CENTER" spacing="30" VBox.vgrow="ALWAYS">
                    <Label fx:id="eventMainTitle" text="EVENT PHASE!" wrapText="true" />

                    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 25px" BorderPane.alignment="CENTER">
                        <StackPane alignment="CENTER">
                            <ImageView fx:id="spaceShipImage" fitHeight="443.0" fitWidth="606.0" preserveRatio="true" style="-fx-border-radius: 8; -fx-background-radius: 8" />
                            <GridPane fx:id="spaceshipMatrix" alignment="CENTER" hgap="1.0" vgap="1.0" />
                        </StackPane>

                        <HBox alignment="CENTER" spacing="40">
                            <HBox alignment="CENTER_LEFT" spacing="3">
                                <ImageView fx:id="firePowerSymbol" fitHeight="50" fitWidth="50" preserveRatio="true" />
                                <Label fx:id="firePowerValue" text="" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="3">
                                <ImageView fx:id="enginePowerSymbol" fitHeight="50" fitWidth="50" preserveRatio="true" />
                                <Label fx:id="enginePowerValue" text="" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="3">
                                <ImageView fx:id="destroyedSymbol" fitHeight="50" fitWidth="50" preserveRatio="true" />
                                <Label fx:id="destroyedValue" text="" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="3">
                                <ImageView fx:id="creditsSymbol" fitHeight="50" fitWidth="50" preserveRatio="true" />
                                <Label fx:id="creditsValue" text="" />
                            </HBox>
                        </HBox>
                    </VBox>

                    <Label fx:id="eventMainDesc" text="Event description..." wrapText="true" />
                    <VBox fx:id="btnContainer" alignment="CENTER" spacing="30" />
                </VBox>
            </center>

        </BorderPane>
    </ScrollPane>

</StackPane>
